import pygame 
pygame.init() 

# Screen setup
screen = pygame.display.set_mode((600, 400))
pygame.display.set_caption("Pygame Bouncing ball")
clock = pygame.time.Clock()

# Game sate variables
x, y = 300, 200  

radius = 77
speed_x = 4
speed_y = 3
color = (255, 0, 0)

running = True
while running:
  # 1️⃣ HANDLE EVENTS
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
    # 2️⃣ UPDATE GAME STATS (Move and bounce)
    x += speed_x
    y += speed_y

   # Bounce horizontally
    if x - radius <= 0 or x + radius >= 600:
      speed_x *= -1 # Reverse direction 
    # Bounce vertically
    if y - radius <= 0 or y + radius >= 400:
      speed_y *= -1  # Reverse direction

    # 3️⃣ DRAW EVERYTHING
    screen.fill((102, 0, 204))
    pygame.draw.circle(screen, color, (x, y), radius)
    pygame.display.update()
    clock.tick(60)

pygame.quit()
